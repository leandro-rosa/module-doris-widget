                <use_widget_in_right_position>1</use_widget_in_right_position>
            </init>
            <inject_button>
                <validate_sku>0</validate_sku>
                <show_badge>1</show_badge>
                <description></description>
                <use_totem_experience>0</use_totem_experience>
                <use_widget_in_right_position>0</use_widget_in_right_position>
            </inject_button>
        </doris_widget>
    </default>
