<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <doris_widget>
            <init>
                <active>1</active>
                <color>#00A2FF</color>
                <splash_image>https://doris-media-production.s3.sa-east-1.amazonaws.com/media/splash.png</splash_image>
